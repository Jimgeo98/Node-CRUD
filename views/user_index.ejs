<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./templates/header.ejs') %>
  </head>
  <body>
    <div class="container">
      <h2><%= title %></h2>
      <a href="/add" class="btn btn-sm btn-success">Add User</a><br/><br/>
      <table class="table table-dark table-hover table-bordered">
        <thead class="thead-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>AM</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(user){ %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.am %></td>
              <td>
                <a href="edit/<%= user.id %>" class="btn btn-sm btn-primary" id="edit">Edit</a>
                <a href="delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <%- include('./templates/footer.ejs') %>
  </body>
</html>
